<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.StackPane?>
<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml" fx:controller="org.assign2.GameController">
  <HBox spacing="10" alignment="CENTER">
    <Label text="Score: " />
    <Label fx:id="scoreLabel" text="0" />
  </HBox>

  <StackPane fx:id="gamePane">
    <GridPane fx:id="gameBoard" VBox.vgrow="ALWAYS" hgap="5" vgap="5">
    </GridPane>
  </StackPane>

  <HBox spacing="10" alignment="CENTER">
    <Button text="Reset" fx:id="resetButton" onAction="#handleReset"/>
  </HBox>
</VBox>
